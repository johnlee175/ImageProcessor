<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start CameraActivity"
            android:onClick="startCamera"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start PipActivity"
            android:onClick="startPip"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start NativeCameraActivity"
            android:onClick="startNativeCamera"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start SimpleCameraActivity"
            android:onClick="startSimpleCamera"/>

</LinearLayout>